<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main"
    app:startDestination="@id/moviesListFragment">

    <fragment
        android:id="@+id/moviesListFragment"
        android:name="com.doonamis.themoviesapp.ui.movies_list.MovieListFragment"
        android:label="Movies List"
        tools:layout="@layout/fragment_movie_list">
        <action
            android:id="@+id/action_moviesListFragment_to_movieDetailFragment"
            app:destination="@id/movieDetailFragment" />

    </fragment>

    <fragment
        android:id="@+id/movieDetailFragment"
        android:name="com.doonamis.themoviesapp.ui.movie_details.MovieDetailsFragment"
        android:label="Movie Detail"
        tools:layout="@layout/fragment_movie_details"/>

</navigation>